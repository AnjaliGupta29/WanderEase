<% layout('/layouts/boilerplate') %>

<div class="row   mt-3">
    <h1 class="col-6 offset-3 ">SignUp for Wonderlust</h1>
    <div class="col-6 offset-3 ">
        <form method="POST" action="/signUp" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">username</label>
                <input
                 required 
                name="username" 
                type="text"  
                class="form-control" 
                id="username">
                <div class="valid-feedback">
                   Looks good!
                </div>
                <div class="invalid-feedback">
                   field is required
                </div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                 required 
                name="email" 
                type="email"  
                class="form-control" 
                id="email">
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                 required 
                name="password" 
                type="password"  
                class="form-control" 
                id="password">
            </div>

            <button class="btn btn-success">SignUp</button>

        </form>
    </div>
</div>